<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title%></title>
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div id="header" class="header-div">
        <div id="1" class="header-one">
            <img src="./1043px-Microsoft_Excel_2013_logo.svg.png" alt="">
        </div>
        <div id="2" class="header-two">
            Excel
        </div>
        <div id="3" class="header-three">
            Neeraj Shukla
        </div>
    </div>
    <!-- #menu-container+#menu-options-container+(#formula-container>(input#address-input+input#formula-input))+#cell-container+#sheets -->
    <div id="menu-container">
        <div id="file" class="file-explorer">File</div>
        <div id="home" class="menu active">Home</div>
        <div id="view" class="menu">View</div>
        <div id="help" class="menu">Help</div>
    </div>
    <div id="menu-options-container">
        <div id="file-menu-options" class="file-explorer-options">
            <ul class="menu-ul">
                <div id="back">
                    <i class="fa fa-arrow-left" style="font-size:24px"></i>
                </div>
                    <div id="info">Info</div>
                    <div id="new">New</div>
                    <div id="open">Open</div>
                    <div id="save">Save</div>
                    <div id="about">About</div>
            </ul>
        </div>
        <div id="home-menu-options" class="menu-options active">
            <ul class="ul-options">
                <li>
                    <div class="Undo">
                        <div>Undo</div>
                        <div>Redo</div>
                        <span>Undo</span>   
                    </div>
                </li>
                <li>
                    <div class="divider"></div>
                </li>
                <li>
                    <div class="formatting-col">
                        <div class="f-row">
                            <select id="font-family">
                                <option value="Arial">Arial</option>
                                <option value="monospace">monospace</option>
                                <option value="sans-Serif">sans-Serif</option>
                                <option value="cursive">cursive</option>
                            </select>
                            <select id="font-size">
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="14">14</option>
                                <option value="16">16</option>
                                <option value="20">20</option>
                                <option value="32">32</option>
                            </select>
                        </div>
                        <div class="f-row">
                            <div class="style-buttons">
                                <button id="bold">B</button>
                                <button id="italic">I</button>
                                <button id="underline">U</button>
                            </div>
                            <div class="colors">
                                <input type="color" id="bg-color">
                                <input type="color" id="color">
                            </div>
                        </div>
                    </div>
                    <span>Font</span>  
                </li>
                <li>
                    <div class="divider"></div>
                </li>
                <li>
                    <div class="alignment-col">
                        <button id="left">L</button>
                        <button id="right">C</button>
                        <button id="center">R</button>
                    </div>
                    <span>Alignment</span>  
                </li>
                <li>
                    <div class="divider"></div>
                </li>
            </ul>
        </div> 
        <div id="view-menu-options" class="menu-options"></div>

    </div>
    <div id="formula-container">
        <input type="text" id="address-input">
        <input type="text" id="formula-input">
    </div>
    <div id="cell-container">
        <div id="tl-cell"></div>
        <div id="top-row">
            <%for(let j=0;j<26;j++){%>
            <div class="cell" cellId=<%=j%>>
                <%=String.fromCharCode(j+65)%>
            </div>
            <%}%>
        </div>
        <div id="left-col">
            <%for(let i=0;i<100;i++){%>
            <div class="cell" cellId=<%=i%>>
                <%=i+1%>
            </div>
            <%}%>
    </div>

    <div id="grid">
        <%for(let i=0;i<100;i++){%>
            <div class="row">
                <%for(let j=0;j<26;j++){%>
                <div class="cell" rowId=<%=i%> colId=<%=j%>>cell</div>
                <%}%>
        </div>
        <%}%>
            </div>
        </div>
        <div id="sheets">
            <ul class="sheets-nav">
                <li class="sheets-item">Sheet1</li>
            </ul>
            <button class="add-sheets">
                &#43;
            </button>
        </div>
        <script src="./script.js"></script>
</body>

</html>